    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2022", "esnext.disposable", "dom"]
  },
  "include": ["src/**/*"]
